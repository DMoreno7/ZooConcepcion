{% extends 'base.html.twig' %}


{% block titulo  %}
Listado de Usuarios
{% endblock titulo %}

{% block redireccion  %}
<a href="/usuario/crear">Registrar Usuarios</a>
{% endblock redireccion %}

{% block contenido %}
<table class="table table-claro table-striped table-hover table-bordered">
	<tr>
		<th>Nombre</th>
		<th colspan="2">Opciones</th>
	</tr>
	{% for a in usuarios %}
	<tr>
		<td>{{ a.getUsuario() }}</td>
		<td><a href="eliminar?id={{ a.getId() }}">Eliminar</a></td>
		<td><a href="editar?id={{ a.getId() }}">Modificar</a></td>
	</tr>
	{% endfor %}
</table>
<h4>
	{{ mensaje }}
</h4>
{% endblock contenido %}
